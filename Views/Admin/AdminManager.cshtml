@{
    ViewData["Title"] = "Admin Dashboard";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f4f0;
            color: #4b4b4b;
        }

         header {
            background-color: #f7e3c0;
            padding: 10px;
            text-align: center;
            font-size: 12px;
            color: #6d6a5d;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        header p {
            margin: 0;
        }

        .logo {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .logo h1 {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            color: #6d6a5d;
            letter-spacing: 2px;
            margin: 0;
            transition: all 0.3s ease;
        }

        .logo h1:hover {
            color: #CD8899;
            transform: scale(1.1);
        }


       
        .menu-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #CD8899;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 0 20px;
            margin-left: 100px;
        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-grow: 1;
            margin-right: 10px;
        }

        .menu a {
            text-decoration: none;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
            padding: 14px 25px;
            display: block;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;

        }

        .menu a:hover {
            color: #6d6a5d;
            background-color: #ffffff;
            transform: scale(1.1);
        }

        .header-main {
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            background-color: #fff;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 12px;
            margin: 100px auto;
            max-width: 1200px;
            min-height: 500px;
            border-radius: 15px;
            background: linear-gradient(135deg, #f9f7f6, #f1e0d6);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
        }

        .header-main:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.2);
        }

        .header-main h1 {
            font-size: 50px;
            color: #7f6a4e;
            margin-bottom: 25px;
            font-family: 'Playfair Display', serif;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 2px;
            line-height: 1.2;
            transition: color 0.3s ease;
        }

        .header-main h1:hover {
            color: #e49e6d;
        }

        .header-main p {
            font-size: 20px;
            color: #7f6a4e;
            font-family: 'Poppins', sans-serif;
            line-height: 1.8;
            max-width: 850px;
            margin: 0 auto;
            padding: 0px;
        }

        .header-main p span {
            font-weight: bold;
            color: #e49e6d;
        }

        .container {
            margin-top: 30px;
        }

        .table {
            background-color: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .btn-custom {
            background-color: #28a745;
            color: white;
            border: none;
        }

        .btn-custom:hover {
            background-color: #218838;
        }

        .btn-danger-custom {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-danger-custom:hover {
            background-color: #c82333;
        }
    </style>
</head>

<body>

    <div class="logo">
        <h1>Blossom Boutique</h1>

        <div class="menu-wrapper">
            <div class="menu">
                <a href="@Url.Action("Index", "Admin")">Home</a>
                <a href="@Url.Action("UsersList", "Admin")">Users List </a>
                <a href="@Url.Action("ProductManagement", "Admin")">Product Management</a>
            </div>
        </div>
    </div>


    <div class="header-main">
        <h1>Welcome to the Admin Panel!</h1>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
