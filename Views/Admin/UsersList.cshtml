@model IEnumerable<Florals.Models.User>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f4f0;
            color: #4b4b4b;
        }


        .logo {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .logo h1 {
            font-family: 'Playfair Display', serif;
            font-size: 50px;
            color: #6d6a5d;
            letter-spacing: 2px;
            margin: 0;
            transition: all 0.3s ease;
        }

        .logo h1:hover {
            color: #CD8899;
            transform: scale(1.1);
        }

        .menu-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #CD8899;
            padding: 10px 0;
        }

        .menu a {
            text-decoration: none;
            color: #ffffff;
            font-size: 16px;
            font-weight: bold;
            padding: 14px 25px;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .menu a:hover {
            color: #6d6a5d;
            background-color: #ffffff;
            transform: scale(1.1);
        }

        .user-container {
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin: 30px auto;
            max-width: 1200px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .table th {
            background-color: #f8f9fa;
        }
    </style>
</head>

<body>
    <div class="logo">
        <h1>Blossom Boutique</h1>
    </div>

    <div class="menu-wrapper">
        <div class="menu">
            <a href="@Url.Action("Index", "Admin")">Home</a>
            <a href="@Url.Action("UsersList", "Admin")">Users List</a>
            <a href="@Url.Action("ProductManagement", "Admin")">Product Management</a>
        </div>
    </div>


    <div class="user-container">
        <h2 class="text-center mb-4">User List</h2>
        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Full Name</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Role</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                        <td>@user.Role</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
