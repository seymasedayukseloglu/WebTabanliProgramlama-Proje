@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blossom Boutique</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f4f0;
            color: #4b4b4b;
        }

        header {
            background-color: #f7e3c0;
            padding: 10px;
            text-align: center;
            font-size: 12px;
            color: #6d6a5d;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        header p {
            margin: 0;
        }

        .logo {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .logo h1 {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            color: #6d6a5d;
            letter-spacing: 2px;
            margin: 0;
            transition: all 0.3s ease;
        }

        .logo h1:hover {
            color: #CD8899;
            transform: scale(1.1);
        }


        .menu-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 0 20px;
            margin-left: 100px;
        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-grow: 1;
            margin-right: 10px;
        }

        .menu a {
            text-decoration: none;
            color: #6d6a5d;
            font-size: 16px;
            font-weight: bold;
            padding: 14px 25px;
            display: block;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;

        }

        .menu a:hover {
            color: #fff;
            background-color: #CD8899;
            transform: scale(1.1);
        }

        .icon {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 10px;
            padding: 10px;

        }

        .icon img {
            width: 40px;
            height: 40px;
            cursor: pointer;
            border-radius: 35%;
            padding: 5px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .icon img:hover {
            transform: scale(1.2);
            background-color: #CD8899;
        }

        .hero {
            position: relative;
            text-align: center;
            color: white;
            height: 600px;
            overflow: hidden;
        }

        .hero video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .hero-content {
            position: relative;
            padding: 150px 20px;
        }

        .hero h2 {
            font-size: 36px;
            margin-bottom: 20px;
            font-family: 'Playfair Display', serif;
            letter-spacing: 1px;
        }

        .hero p {
            font-size: 18px;
            margin-bottom: 30px;
            font-weight: 500;
        }

        .hero button {
            background-color: #CD8899;
            color: white;
            padding: 12px 30px;
            border: none;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .hero button:hover {
            background-color: #CD8899;
        }

        .shop {
            text-align: center;
            padding: 50px 20px;
        }

        .shop h3 {
            font-size: 36px;
            margin-bottom: 30px;
            color: #6d6a5d;
        }

        .shop-items {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .shop-item {
            background-color: #fff;
            width: 300px;
            text-align: left;
            border: 1px solid #ddd;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .shop-item:hover {
            transform: translateY(-10px);
        }

        .shop-item img {
            width: 100%;
            height: 250px;
            object-fit: cover;
        }

        .shop-item div {
            padding: 20px;
        }

        .shop-item h4 {
            font-size: 24px;
            margin-bottom: 10px;
            color: #6d6a5d;
        }

        .shop-item p {
            font-size: 16px;
            color: #777;
            margin-bottom: 20px;
        }

        .shop-item button {
            background-color: #CD8899;
            color: white;
            padding: 12px;
            border: none;
            width: 100%;
            font-size: 16px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .shop-item button:hover {
            background-color: #CD8899;
        }

        footer {
            background-color: #fff;
            padding: 30px 20px;
            text-align: center;
            color: #777;
            border-top: 1px solid #ddd;
        }

        footer a {
            color: #CD8899;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <header>
        <p>Place an order online for February 14th | Call us at (800) 555-1234</p>
    </header>

    <div class="logo">
        <h1> Blossom Boutique </h1>

        <div class="menu-wrapper">
            <div class="menu">
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("Index", "Product")">Shop</a>
                <a href="@Url.Action("Index", "AboutUs")">About Us</a>
                <a href="@Url.Action("Index", "Contact")">Contact</a>

            </div>

            <div class="icon">

                <a href="@Url.Action("", "")">
                    <img src="images/arama.png" alt="Arama">
                </a>
                <a href="@Url.Action("GirisYap", "User")">
                    <img src="images/login.png" alt="Login">
                </a>

                <a href="@Url.Action("", "")">
                    <img src="images/sepet.png" alt="Sepet">
                </a>
            </div>
        </div>
    </div>

    <div class="hero">
        <video id="videoPlayer" autoplay muted>
            <source src="videos/content1.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="hero-content">
            <h2>Welcome to Blossom Boutique</h2>
            <p>Your destination for unique, sustainable floral designs inspired by the Southeast's natural splendor.
            </p>
            <button onclick="window.location.href='@Url.Action("Index", "Product")'">SHOP NOW</button>


        </div>
    </div>

    <div class="shop">
        <h3>SHOP</h3>
        <div class="shop-items">
            <div class="shop-item">
                <img src="images/flowers.jpg" alt="Flowers">
                <div>
                    <h4>Flowers</h4>
                    <p>Fresh, local flowers for pickup in our shop.</p>
                </div>
                <button onclick="window.location.href='@Url.Action("Index", "Product")'">SHOP NOW</button>
            </div>

            <div class="shop-item">
                <img src="images/bouquet.jpg" alt="bouquet">
                <div>
                    <h4>Flower Arrangements	</h4>
                    <p>Unique flower bouquets specially prepared for the person.</p>
                </div>
                <button onclick="window.location.href='@Url.Action("Index", "Product")'">SHOP NOW</button>
            </div>

            <div class="shop-item">
                <img src="images/weddings.jpg" alt="Weddings & Events">
                <div>
                    <h4>Weddings & Events</h4>
                    <p>Elegant floral designs for every special occasion.</p>
                </div>
                <button onclick="window.location.href='@Url.Action("Index", "Product")'">SHOP NOW</button>
            </div>
        </div>
    </div>


    <footer>
        <div
            style="background-color: #fff; padding: 30px 20px; text-align: center; color: #777; border-top: 1px solid #ddd;">
            <div style="margin-bottom: 20px;">
                <p style="font-size: 18px; font-weight: bold; color: #6d6a5d;">Download Our Mobile App</p>
                <img src="images/qr.png" alt="QR Kod ile İndirin" style="width: 100px; margin: 10px auto;">
                <p style="font-size: 14px; color: #777;">Download our app now with a QR code.</p>
            </div>

            <div style="display: flex; justify-content: center; gap: 50px; flex-wrap: wrap; margin-bottom: 30px;">
                <div>
                    <h4 style="font-size: 16px; font-weight: bold; margin-bottom: 10px; color: #6d6a5d;">Useful
                        Information</h4>
                    <ul style="list-style: none; padding: 0; font-size: 14px; color: #777;">
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Flower Care</a></li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Order Update
                                Processes</a>
                        </li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Seasonal Flowers</a></li>
                    </ul>
                </div>

                <div>
                    <h4 style="font-size: 16px; font-weight: bold; margin-bottom: 10px; color: #6d6a5d;">Corporate
                    </h4>
                    <ul style="list-style: none; padding: 0; font-size: 14px; color: #777;">
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">About us</a></li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Career Opportunities</a></li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Personal Data</a></li>
                    </ul>
                </div>

                <div>
                    <h4 style="font-size: 16px; font-weight: bold; margin-bottom: 10px; color: #6d6a5d;">Special
                        Occasions
                    </h4>
                    <ul style="list-style: none; padding: 0; font-size: 14px; color: #777;">
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Valentine's Day</a></li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Mother's Day</a></li>
                        <li><a href="#" style="color: #d9bdb7; text-decoration: none;">Christmas Gifts</a></li>
                    </ul>
                </div>
            </div>

            <div style="font-size: 14px; color: #777; margin-top: 20px;">
                <p>&copy; Blossom Boutique | Tüm Hakları Saklıdır.</p>
            </div>
        </div>
    </footer>

    <script>
        const videoSources = ["videos/content1.mp4", "videos/content3.mp4", "videos/content2.mp4"];
        const videoPlayer = document.getElementById("videoPlayer");
        let currentVideoIndex = 0;

        videoPlayer.addEventListener("ended", () => {
            currentVideoIndex = (currentVideoIndex + 1) % videoSources.length;
            videoPlayer.src = videoSources[currentVideoIndex];
            videoPlayer.play();
        });
    </script>
</body>

</html>
