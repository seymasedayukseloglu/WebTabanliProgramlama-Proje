    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&family=Playfair+Display&display=swap"
        rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background-color: #f7f4f0;
            color: #4b4b4b;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        header {
            background-color: #f7e3c0;
            padding: 10px;
            text-align: center;
            font-size: 12px;
            color: #6d6a5d;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        header p {
            margin: 0;
        }      

        .logo {
            text-align: center;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .logo h1 {
            font-family: 'Playfair Display', serif;
            font-size: 48px;
            color: #6d6a5d;
            letter-spacing: 2px;
            margin: 0;
            transition: all 0.3s ease;
        }

        .logo h1:hover {
            color: #CD8899;
            transform: scale(1.1);
        }

        .menu-wrapper {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 0 20px;
            margin-left: 100px;

        }

        .menu {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-grow: 1;
            margin-right: 10px;
        }

        .menu a {
            text-decoration: none;
            color: #6d6a5d;
            font-size: 16px;
            font-weight: bold;
            padding: 14px 25px;
            display: block;
            border-radius: 8px;
            transition: all 0.3s ease-in-out;
        }

        .menu a:hover {
            color: #fff;
            background-color: #CD8899;
            transform: scale(1.1);
        }

        .icon {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
        }

        .icon img {
            width: 40px;
            height: 40px;
            cursor: pointer;
            border-radius: 35%;
            padding: 5px;
            transition: transform 0.3s ease, background-color 0.3s ease;
        }

        .icon img:hover {
            transform: scale(1.2);
            background-color: #CD8899;
        }

        .hero {
            position: relative;
            text-align: center;
            color: white;
            height: 500px;
            overflow: hidden;
        }

        .hero video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            z-index: -1;
        }

        .hero-content {
            position: relative;
            padding: 120px 20px;
        }

        .hero h2 {
            font-size: 36px;
            margin-bottom: 15px;
            font-family: 'Playfair Display', serif;
            letter-spacing: 1px;
        }

        .hero p {
            font-size: 18px;
            margin-bottom: 25px;
            font-weight: 500;
        }

        .hero button {
            background-color: #CD8899;
            color: white;
            padding: 12px 30px;
            border: none;
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .hero button:hover {
            background-color: #CD8899;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background: #ffffff;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .carousel {
            display: flex;
            overflow: hidden;
            position: relative;
            width: 100%;
            height: 400px;
            margin: 40px auto;
            border-radius: 10px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .carousel-inner {
            display: flex;
            transition: transform 0.5s ease-in-out;
            width: 300%;
        }

        .carousel-slide {
            width: 100%;
            flex-shrink: 0;
        }

        .carousel img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .carousel-buttons {
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            display: flex;
            justify-content: space-between;
            transform: translateY(-50%);
        }

        .carousel-buttons button {
            background: rgba(0, 0, 0, 0.5);
            color: #fff;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 50%;
            z-index: 1;
        }

        .about-section {
            text-align: center;
            margin: 50px 0;
            padding: 20px;
        }

        .about-section h2 {
            font-size: 36px;
            color: #3a3a3a;
            margin-bottom: 20px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .about-section p {
            font-size: 18px;
            color: #666;
            max-width: 900px;
            margin: 0 auto 20px;
        }

        .services-section {
            background-color: #f1f1f1;
            padding: 50px 0;
            text-align: center;
        }

        .services-section h2 {
            font-size: 36px;
            margin-bottom: 20px;
            color: #3a3a3a;
        }

        .services-item:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
        }


        .services-list {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 30px;
        }

        .services-item {
            width: 30%;
            padding: 20px;
            background: #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            text-align: center;
            overflow: hidden;
        }

        .services-item img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            border-radius: 8px 8px 0 0;
        }

        .services-item h3 {
            font-size: 24px;
            margin: 10px 0;
            color: #6d6a5d;
        }

        .services-item p {
            font-size: 16px;
            color: #555;
        }


        .contact-section {
            background-color: #CD8899;
            color: #fff;
            padding: 40px 20px;
            text-align: center;
        }

        .contact-section h2 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .contact-section p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .contact-section a {
            background-color: #fff;
            color: #8c7e72;
            padding: 12px 30px;
            text-decoration: none;
            border-radius: 5px;
            font-size: 18px;
            transition: background-color 0.3s ease;
        }

        .contact-section a:hover {
            background-color: #343730;
            color: #fff;
        }

        footer {
            background-color: #fff;
            padding: 30px 20px;
            text-align: center;
            color: #777;
            border-top: 1px solid #ddd;
        }

        footer a {
            color: #CD8899;
            text-decoration: none;
            font-weight: bold;
        }

        footer a:hover {
            text-decoration: underline;
        }
    </style>
</head>

